<h1 class="title"><%= addresses_title_with_size %></h1>

<div class="columns is-centered">
  <%= form_tag(addresses_path, method: :get) do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag :q, params[:q], { class: 'input', placeholder: t('.placeholder') } %>
    </div>
    <div class="control">
      <%= submit_tag t('Search'), name:nil, class: 'button is-info' %>
    </div>
  </div>
  <% end %>
</div>

<% @addresses.each do |address| %>
  <%= render partial: "address", locals: { address: address } %>
<% end %>

<br>
