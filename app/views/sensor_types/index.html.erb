<h1 class="title"><%= t(:sensor_types_title) %></h1>

<table class="table is-fullwidth is-bordered is-hoverable">
  <thead>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t('sensor_types.livetime') %></th>
      <th><%= t(:description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t('sensor_types.livetime') %></th>
      <th><%= t(:description) %></th>
      <th colspan="3"></th>
    </tr>
  </tfoot>
  <tbody>
    <% @sensor_types.each do |sensor_type| %>
      <%= render partial: "sensor_type", locals: { sensor_type: sensor_type } %>
    <% end %>
  </tbody>
</table>

<div style="padding-top: 1em;">
<%= link_to t('.New'), new_sensor_type_path %>
</div>
